<div class="container">
<form method="GET">
  <div class="mb-3">
    <label for="note-key" class="form-label">Key</label>
    <input type="text" class="form-control" id="note-key" name="key">
  </div>

  <div class="mb-3">
    <label for="note-title" class="form-label">Title</label>
    <input type="text" class="form-control" id="note-title" name="title">
  </div>

  <div class="mb-3">
    <label for="note-body" class="form-label">Body</label>
    <textarea class="form-control" id="note-body" rows="3"></textarea>
  </div>

  <button type="submit" class="btn btn-primary mb-3">Create</button>
</form>
</div>


